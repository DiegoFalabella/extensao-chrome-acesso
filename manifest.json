{
    "manifest_version": 3,
    "name": "Token Capturer",
    "version": "1.0",
    "permissions": [
        "webRequest",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "https://bancodepreco.tce.mg.gov.br/*",
        "https://arabiasaudita.tce.mg.gov.br/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    }
}
